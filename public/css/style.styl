/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #707070
background-color = #faf9f0

content
  font-family 'Georgia'
  background-color background-color
  color #444

.nav.nav-pills
  background-color main-color
  font-size 25px
  color #ffffff
  text-align center

#authNavigationBar
  height 150px

#homeNavigationBar
  height 100px

.panel.panel-default
  width 600px
  margin-left auto
  margin-right auto
  margin-top 8%
  margin-bottom auto

.form-group
  margin-left 20px
  margin-right 20px

#signInEmailLabel
  margin-top 20px

.control-label
  margin-left -15px
  margin-right -15px

#signInButton
  margin-top 10px
  width 100%
  height 50px
  color #ffffff
  font-size 16px
  background-color rgba(9, 115, 14, 0.43)

#testNameParagraph
  margin-top : auto
  margin-bottom : auto
  margin-left : 15px

#testDateParagraph
  margin-top : auto
  margin-bottom : auto
  margin-right : 15px
  float right

#startTestButton
  margin-top : -4px
  margin-bottom : auto
  float right
  margin-right 0px
  height 30px
  width 75px

#nextQuestionButton
  float right
  margin-right 0px

#testsListContainer
  margin-top 50px
  width 500px
  margin-right auto
  margin-left auto

#questionTextAreaLabel
  margin-top 20px
  width 100%

#finishTestButton
  float right
  margin-right 20px
  margin-top -30px
  color #ffffff
  background-color rgba(9, 115, 14, 0.43)

#goHomeButton
  margin-top 10px
  width 100%
  height 50px
  color #ffffff
  font-size 16px
  background-color rgba(9, 115, 14, 0.43)

#resultPanel
  width 500px

#resultButton
  margin-top -10px
  margin-left auto
  margin-right auto
  width 30%
  height 40px
  color #ffffff
  font-size 16px
  background-color rgba(9, 115, 14, 0.43)
  float: left

#resultLabel
  margin-top 10px
  margin-left auto

#resultMessageLabel
  margin-left auto
  margin-right auto

#testTimeout
  float right
  margin-right 20px
  margin-top -30px

footer
  text-align center
  width 90%
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px

