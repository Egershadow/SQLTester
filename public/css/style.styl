/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #707070
background-color = #faf9f0

body
  font-family 'Georgia'
  background-color background-color
  color #444

.nav.nav-pills
  background-color main-color
  font-size 25px
  color #ffffff
  text-align center

#authNavigationBar
  height 150px

#homeNavigationBar
  height 100px

.panel.panel-default
  width 600px
  margin-left auto
  margin-right auto
  margin-top 8%
  margin-bottom auto

.form-group
  margin-left 20px
  margin-right 20px

#signInEmailLabel
  margin-top 20px

.control-label
  margin-left -15px
  margin-right -15px

#signInButton
  margin-top 10px
  width 100%
  height 50px
  color #ffffff
  font-size 16px
  background-color rgba(9, 115, 14, 0.43)


